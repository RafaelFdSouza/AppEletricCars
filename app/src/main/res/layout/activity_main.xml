<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presenter.MainActivity">
    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="@string/eletric_car"
        android:textColor="@color/cor_textos"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tab_carros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:text="@string/carros"
        android:textAlignment="center"
        android:textColor="@color/cor_textos"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tab_favoritos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_app_name" />

    <TextView
        android:id="@+id/tab_favoritos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:text="@string/favoritos"
        android:textAlignment="center"
        android:textColor="@color/cor_textos"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tab_carros"
        app:layout_constraintTop_toTopOf="@+id/tab_carros" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cv_car"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        android:backgroundTint="@color/cor_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_carros">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <TextView
                android:id="@+id/tv_modeloCarro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Modelo Carro"
                android:textAlignment="center"
                android:textColor="@color/cor_textos"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/imv_carro"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/imv_carro"
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:contentDescription="@string/imagem_carro"
                android:src="@drawable/nissan_leaf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_modeloCarro" />

            <TextView
                android:id="@+id/tv_preco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/preco"
                android:textAlignment="center"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_autonomia"
                app:layout_constraintTop_toBottomOf="@id/imv_carro" />

            <TextView
                android:id="@+id/tv_preco_valor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R$300.000,00"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_preco" />

            <TextView
                android:id="@+id/tv_autonomia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/autonomia"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_preco_valor"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_preco" />

            <TextView
                android:id="@+id/tv_autonomia_valor"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="300 km"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_preco_valor"
                app:layout_constraintTop_toTopOf="@id/tv_autonomia" />

            <TextView
                android:id="@+id/tv_potencia"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/potencia"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_autonomia"
                app:layout_constraintTop_toBottomOf="@id/tv_autonomia" />

            <TextView
                android:id="@+id/tv_valor_potencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300 cv"
                android:textStyle="bold"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_autonomia_valor"
                app:layout_constraintTop_toTopOf="@id/tv_potencia" />

            <TextView
                android:id="@+id/tv_recarga"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Recarga:"
                android:textColor="@color/cor_textos"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_potencia"
                app:layout_constraintTop_toBottomOf="@id/tv_potencia" />

            <TextView
                android:id="@+id/tv_tempo_recarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25 min"
                android:textColor="@color/cor_textos"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/tv_valor_potencia"
                app:layout_constraintTop_toTopOf="@id/tv_recarga" />

            <Button
                android:id="@+id/btnCustosViagem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/cor_botoes"
                android:text="@string/calcule_os_gastos_de_uma_viagem"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/cl_card_content"
                app:layout_constraintStart_toStartOf="@id/cl_card_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_recarga" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>